<h2> Review the Concert </h2>

  <%= form_for @review do |f| %>
 
    <%= f.label :concert_id %>
    <%= f.collection_select :concert_id, Concert.all, :id, :name %>
    <br><br>

    <%= f.label :comment %>
    <%= f.text_area :comment %>
    <br><br>
    
    <%= f.label :score %>
    <%= f.select :score, options_for_select(1..5),
       {:prompt => 'What did the concert score?'} %>
   <br><br>
       
    <%= f.submit %>

   <% end %>